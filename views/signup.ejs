<link rel="stylesheet" href="/styles/signin.css">

<div class="bottomdiv navbar-fixed-bottom">

  <h1>Local Meow</h1>
  <p class="text-muted">Create your new account. Password must be at least six characters.</p>

  <form class="form-signin" method="POST" action="/user">
    <label for="inputEmail" class="sr-only">Email address</label>
    <input name="email" class="input-lg" placeholder="Email" required autofocus>
    <br>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="input-lg" placeholder="Password" required>
    <br>
    <button class="btn btn-lg btn-primary" type="submit">Sign Up!</button>
  </form>

</div>
